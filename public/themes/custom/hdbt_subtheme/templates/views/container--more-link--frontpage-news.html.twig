{% set link_attributes = {
  'class': [
    'latest-news__link',
  ],
} %}

{% if alternative_language %}
  {% set link_attributes = link_attributes|merge({
    'dir': lang_attributes.fallback_dir,
    'lang': lang_attributes.fallback_lang
    })
  %}
{% endif %}

<div class="latest-news__link-wrapper">
  {% include '@hdbt/navigation/link-button.html.twig' with {
    type: 'primary',
    label: element['#title'],
    url: element['#url'],
    link_options: link_attributes,
  } %}
</div>
