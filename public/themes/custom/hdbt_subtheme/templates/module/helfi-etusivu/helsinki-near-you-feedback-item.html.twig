    {
      icon: 'clock',
      label: 'Requested'|t({}, {'context': 'Label for feedback requested date'}),
      content: requested_datetime|date('d.m.Y'),
    },
    {
      icon: 'map',
      label: 'Location'|t({}, {'context': 'Label for feedback location'}),
      content: address,
    },
  ]
} %}
{% endembed %}
