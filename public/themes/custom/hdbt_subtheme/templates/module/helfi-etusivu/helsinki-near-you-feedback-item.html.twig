  card_modifier_class: feedback_attributes['class']|join(' '),
  card_title: title,
  card_title_level: 'h3',
  card_url: uri,
  card_url_external: true,
  card_category_tag: {
    tag: status.label,
    color: status.value == 'READY' ? 'success' : '',
  },
