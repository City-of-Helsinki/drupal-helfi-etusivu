{% set component_attr = create_attribute() %}
{% set container_attr = create_attribute() %}

{% set component_classes = ['component--current'] %}
{% set component_title = 'Current right now'|t %}
{% set component_content_class = 'current' %}

{% set illustration_alt = 'Seasonal illustration'|t %}

<div{{ component_attr.addClass('component', component_classes) }}>
  <div class="current__content">

    <div class="current__links-container">
      {% if component_title|render %}
        <{{ component_title_level|default('h2') }} class="component__title">
          {{ component_title }}
        </{{ component_title_level|default('h2')}}>
      {% endif %}

      {% if component_description|render %}
        <div class="component__description">
          {{ component_description}}
        </div>
      {% endif %}

      <div{{ container_attr.addClass('component__content', component_content_class) }}>
        {% block component_content %}
          {{ content }}
        {% endblock %}
      </div>
    </div>

    <div class="current__illustration-container">
      <img src="{{ seasonal_illustration }}" alt="{{ illustration_alt }}" class="current__seasonal-illustration" />
    </div>

  </div>
</div>
