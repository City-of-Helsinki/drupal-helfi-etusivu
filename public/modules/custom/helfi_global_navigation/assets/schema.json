{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Menu tree",
  "description": "A JSON representation of a Drupal menu tree",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string"
      },
      "name": {
        "type": "string"
      },
      "url": {
        "type": "string"
      },
      "menu_tree": { 
        "type": "array",
        "items": {"$ref": "#/$defs/tree"}
      }
    }
  },
  "$defs": {
    "tree": {
      "type": "object",
      "required": ["id", "name", "url", "weight"],
      "properties": {
        "description": {
          "type": "string"
        },
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "url": {
          "type": "string"
        },
        "menu_tree": { 
          "type": "array",
          "items": {"$ref": "#/$defs/tree"}
        },
        "weight": {
          "type": "integer"
        }
      }
    }
  }
}
